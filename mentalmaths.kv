#:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import TimedQuiz TimedQuiz.TimedQuiz

<MenuList>
    name: "menulist"
    ScrollView:
        pos_hint: {"center_x": 0.5, "center_y": 0.55}
        size_hint: (1, 0.8)
        bar_width: 0
        MDBoxLayout:
            adaptive_height: True
            orientation: "vertical"
            pos_hint: {"center_x": 0.5}

            MDBoxLayout:
                padding: "10dp"
                adaptive_height: True
                size_hint_x: 1
                spacing: "10dp"
                orientation: "vertical"
                pos_hint: {"center_x": 0.5}

                MDBoxLayout:
                    adaptive_width: True
                    size_hint_x: 0.5
                    size_hint_y: None
                    height: "56dp"
                    spacing: "10dp"
                    pos_hint: {"center_x": .5}

                    MenuCard:
                        id: Multiply By 11 button
                        text: 'Multiply By 11'
                        completed: app.completed_quiz("Multiply By 11")
                        description: "Multiply two digit numbers by 11"
                        disabled: app.is_level_locked("Multiply By 11")
                        focus_behavior: not self.disabled
                        on_press:
                            app.set_quiz("Multiply By 11")
                            app.change_screen('game_lobby')

                MDBoxLayout:
                    adaptive_width: True
                    size_hint_x: 0.5
                    size_hint_y: None
                    height: "56dp"
                    spacing: "10dp"
                    pos_hint: {"center_x": .5}

                    MenuCard:
                        id: Two Digit Addition button
                        text: 'Two Digit Addition'
                        completed: app.completed_quiz("Two Digit Addition")
                        description: "Add two digit numbers"
                        disabled: app.is_level_locked("Two Digit Addition")
                        focus_behavior: not self.disabled
                        on_press:
                            app.set_quiz("Two Digit Addition")
                            app.change_screen('game_lobby')

                MDBoxLayout:
                    adaptive_width: True
                    size_hint_y: None
                    size_hint_x: 0.5
                    height: "56dp"
                    spacing: "10dp"
                    pos_hint: {"center_x": .5}

                    MenuCard:
                        id: Three By One Digit Multiplication button
                        text: 'Three By One Digit Multiplication'
                        completed: app.completed_quiz("Three By One Digit Multiplication")
                        description: "Multiply three digit numbers by a single digit number"
                        pos_hint: {"center_x": 0.5}
                        disabled: app.is_level_locked("Three By One Digit Multiplication")
                        focus_behavior: not self.disabled
                        on_press:
                            app.set_quiz("Three By One Digit Multiplication")
                            app.change_screen('game_lobby')

                MDBoxLayout:
                    adaptive_width: True
                    size_hint_y: None
                    size_hint_x: 0.5
                    height: "56dp"
                    spacing: "10dp"
                    pos_hint: {"center_x": .5}

                    MenuCard:
                        id: Two Digit Multiplication button
                        text: 'Two Digit Multiplication'
                        completed: app.completed_quiz("Two Digit Multiplication")
                        description: "Multiply two digit numbers"
                        pos_hint: {"center_x": 0.5}
                        disabled: app.is_level_locked("Two Digit Multiplication")
                        focus_behavior: not self.disabled
                        on_press:
                            app.set_quiz("Two Digit Multiplication")
                            app.change_screen('game_lobby')


<BasicScreen>
    on_pre_enter:
        self.ids.toolbar.title = app.quiz_name
    MDTopAppBar:
        id: toolbar
        title: app.quiz_name
        pos_hint: {"bottom": 1}
        elevation: 10
        right_action_items: [["home", lambda x: app.change_screen("home")], ["cog-outline", lambda x: app.change_screen("settings")], ["arrow-left-thick", lambda x: app.previous_screen()]]



MDBoxLayout:

    ScreenManager:
        id: screen_manager
        transition: FadeTransition(duration=.2, clearcolor=app.theme_cls.bg_dark)

        BasicScreen:
            id: home
            name: "home"
            on_pre_enter:
                app.quiz_name = "Maths Dojo"

            MenuList:
                id: MenuList

        GameScreen:
            id: game_screen
            name: "game_screen"

        GameLobbyScreen:
            id: game_lobby
            name: "game_lobby"


        BasicScreen:
            id: pregame
            name: "pregame"

            MDBoxLayout:
                pos_hint: {"center_x": 0.5, "center_y": 0.4}
                orientation: "vertical"
                spacing: "50dp"
                padding: "20dp"
                adaptive_width: True
                size_hint_y: None

                MDBoxLayout:
                    adaptive_width: True
                    size_hint_y: None
                    spacing: "50dp"
                    padding: "20dp"
                    StartGameButton:
                        pos_hint: {"center_x": 0.3}
                    HelpButton:
                        pos_hint: {"center_x": 0.5}
                    RecordButton:
                        pos_hint: {"center_x": 0.7}

                MDBoxLayout:
                    adaptive_width: True
                    size_hint_y: None
                    orientation: "vertical"
                    pos_hint: {"center_x": 0.5}
                    ChallengeLabel:
                        id: gold_challenge_label
                        icon: "trophy"
                        pos_hint: {"center_x": 0.5}
                        icon_color: (100, 100, 0, 1)

                    ChallengeLabel:
                        id: silver_challenge_label
                        icon: "medal-outline"
                        pos_hint: {"center_x": 0.5}
                        icon_color: (150,116,68, 1)

                    ChallengeLabel:
                        id: bronze_challenge_label
                        icon: "medal"
                        pos_hint: {"center_x": 0.5}
                        icon_color: (100,116,150, 1)

        BasicScreen:
            id: settings
            name: "settings"

            MDLabel:
                pos_hint: {"center_x": .6, "center_y": .8}
                text: "Dark Mode"

            MDSwitch:
                id: dark_mode_switch
                pos_hint: {"center_x": .75, "center_y": .8}
                on_active: app.light_dark_switch()

        RecordScreen:
            id: records_screen
            name: "Records"
            MDLabel:
                text: "Records"
                pos_hint: {"center_x": 0.9, "center_y": 0.5}

        CountDownScreen:
            id: count_down_screen
            name: "count_down_screen"


<GameScreen>
    id: game_screen

    MDBoxLayout:
        pos_hint: {"center_x": 1, "center_y": 0.95}
        size_hint: 0.3, 0.1
        ClockLabel:
            id: clock_label

    MDBoxLayout:
        MDLabel:
            id: score
            pos_hint: {"center_x": 0.05, "center_y": 0.95}
            size_hint: 0.3, 0.1
            text: "Score: 0"


    AnswerBoxHighlight:
        id: highlight
        animated_color: self.colour
        animated_size: (PlayerInput.size[0]*1.5, PlayerInput.size[1]*1.5)
        pos_hint: PlayerInput.pos_hint

    MDLabel:
        id: prompt
        text: ""
        halign: "center"
        text_color: app.theme_cls.primary_dark
        font_size: 30
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}

    MDTextField:
        id: PlayerInput
        hint_text: "Enter your answer"
        input_type: "number"
        input_filter: "int"
        helper_text: ""
        helper_text_mode: "on_focus"
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        text_validate_unfocus: False
        on_text_validate:
            app.game.player_input()

<RecordDialog>:
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"

    MDTextField:
        id: NameInput
        hint_text: "Enter your name"
        helper_text: ""
        helper_text_mode: "on_focus"
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        text_validate_unfocus: False
        on_text_validate:
            app.game.set_player_name(self.text)
            app.game.records_update()
            self.text = ""
            app.game.record_pop_up.dismiss()
            app.game.generate_end_game_pop_up()
            app.game.PopUp.open()

<AnswerBoxHighlight>
    animated_color: 0, 0, 0, 0
    blink_size: (0, 0)
    canvas.before:
        Color:
            rgba: self.animated_color
        RoundedRectangle: # center
            size: (root.blink_size[0], root.blink_size[1])
            pos: self.pos[0] + self.size[0]/2. - self.blink_size[0]/2., self.pos[1] + self.size[1]/2. - self.blink_size[1]/2.

<RecordButton>
    text: "Records"
    on_release:
        app.change_screen('Records')
        if app.game.PopUp is not None: app.game.PopUp.dismiss()

<PopUpMenuButton>
    text: "Menu"
    on_release:
        app.game.PopUp.dismiss()
        app.change_screen('home')

<PlayAgainButton>
    text: "Play Again"
    on_release:
        app.game.PopUp.dismiss()
        app.game.start_countdown()

<HelpButton>
    text: "Help"
    on_release:
        app.game.display_help()

<CloseButton>
    text: "Close"
    on_release:
        app.game.HelpPopUp.dismiss()

<StartGameButton>
    text: "Start Game"
    on_release:
        app.game.start_countdown()

<ClockLabel>
    text: "This shouldn't be here"
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    size_hint: 1, 1
    font_size: 25
    color: app.theme_cls.primary_color

<CountDownScreen>
    MDLabel:
        id: count_down
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        size_hint: 0.1, 0.1
        font_size: 100
        color: app.theme_cls.primary_color
        text: "3"

<ChallengeLabel>
    text: "---------------------------------------------------"
    halign: "left"
    text_color: app.theme_cls.text_color
    line_color_disabled: (0, 0, 0, 0)
    line_color: (0, 0, 0, 0)
    ripple_scale: 0

<MenuCard>
    text: root.text
    completed: root.completed
    focus_behavior: True
    pos_hint: {"center_x": 0.5}
    md_bg_color: app.theme_cls.primary_color if not self.disabled else app.theme_cls.bg_dark
    unfocus_color: app.theme_cls.primary_color
    focus_color: app.theme_cls.primary_dark
    MDBoxLayout:
        spacing: "20dp"
        padding: "10dp"
        FitImage:
            source: "plus.jpeg"
            size_hint: .1, 1
        MDBoxLayout:
            orientation: "vertical"
            MDLabel:
                theme_text_color: "Custom"
                text: root.text
            MDBoxLayout:
                MDLabel:
                    text: root.description
                    font_size: 13
                    theme_text_color: "Custom"
                    text_color: [0.0, 0.0, 0.0, 0.54]
                MDIcon:
                    icon: "trophy"
                    disabled: not root.completed
                    theme_text_color: "Custom"
                    text_color: (100, 100, 0, 1)

<GameLobbyScreen>
    on_pre_enter:
        self.ids["Timed Quiz button"].completed = app.completed_game("Timed Quiz")
        self.ids["Time Attack button"].completed = app.completed_game("Time Attack")

    MDBoxLayout:
        pos_hint: {"center_x": 0.5, "center_y": 0.9}
        size_hint: (1, 0.8)
        bar_width: 0
        MDBoxLayout:
            adaptive_height: True
            orientation: "vertical"
            pos_hint: {"center_x": 0.5}

            MDBoxLayout:
                padding: "10dp"
                adaptive_height: True
                size_hint_x: 1
                spacing: "10dp"
                orientation: "vertical"
                pos_hint: {"center_x": 0.5}

                MDBoxLayout:
                    adaptive_width: True
                    size_hint_x: 0.5
                    size_hint_y: None
                    height: "56dp"
                    spacing: "10dp"
                    pos_hint: {"center_x": .5}

                    MenuCard:
                        id: Timed Quiz button
                        text: 'Timed Quiz'
                        completed: app.completed_game("Timed Quiz")
                        description: f"Answer {TimedQuiz.target} questions as fast as possible"
                        disabled: False
                        on_press:
                            app.change_screen('pregame')
                            app.set_game("Timed Quiz")
                            app.launch_game()

                MDBoxLayout:
                    adaptive_width: True
                    size_hint_x: 0.5
                    size_hint_y: None
                    height: "56dp"
                    spacing: "10dp"
                    pos_hint: {"center_x": .5}

                    MenuCard:
                        id: Time Attack button
                        text: 'Time Attack'
                        completed: app.completed_game("Time Attack")
                        description: "Answer as many questions as you can in 30 seconds"
                        disabled: False
                        on_press:
                            app.change_screen('pregame')
                            app.set_game("Time Attack")
                            app.launch_game()
