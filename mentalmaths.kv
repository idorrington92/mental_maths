<ContentNavigationDrawer>:
    ScrollView:

        MDList:

            OneLineListItem:
                text: 'Home'
                pos_hint: {'center_x': 0.5, 'center_y': 0.8}
                text_color: app.theme_cls.primary_dark
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "Menu"
                    app.set_game("Maths Dojo")
            OneLineListItem:
                text: 'Multiply By 11'
                pos_hint: {'center_x': 0.5, 'center_y': 0.8}
                text_color: app.theme_cls.primary_dark
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = 'Multiply By 11'
                    app.set_game("Multiply By 11")
                    app.launch_game()

            OneLineListItem:
                text: 'Two digit addition'
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                text_color: app.theme_cls.primary_dark
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "Two Digit Addition"
                    app.set_game("Two Digit Addition")
                    app.launch_game()

            OneLineListItem:
                text: 'Three by one digit multiplication'
                pos_hint: {'center_x': 0.5, 'center_y': 0.4}
                text_color: app.theme_cls.primary_dark
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "Three By One Digit Multiplication"
                    app.set_game("Three By One Digit Multiplication")
                    app.launch_game()

            OneLineListItem:
                text: 'Two digit multiplication'
                pos_hint: {'center_x': 0.5, 'center_y': 0.2}
                text_color: app.theme_cls.primary_dark
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "Two Digit Multiplication"
                    app.set_game("Two Digit Multiplication")
                    app.launch_game()


MDScreen:

    MDToolbar:
        id: toolbar
        pos_hint: {"top": 1}
        elevation: 10
        title: "Maths Dojo"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

    MDNavigationLayout:
        x: toolbar.height

        ScreenManager:
            id: screen_manager

            MDScreen:
                name: "Menu"

            GameScreen:
                id: MultiplyBy11
                name: "Multiply By 11"

            GameScreen:
                id: TwoDigitAddition
                name: "Two Digit Addition"

            GameScreen:
                id: ThreeByOneDigitMultiplication
                name: "Three By One Digit Multiplication"

            GameScreen:
                id: TwoDigitMultiplication
                name: "Two Digit Multiplication"

        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                id:nav
                screen_manager: screen_manager
                nav_drawer: nav_drawer

<GameScreen>
    MDLabel:
        id: prompt
        text: ""
        halign: "center"
        text_color: app.theme_cls.primary_dark
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}

    MDTextField:
        id: PlayerInput
        hint_text: "Helper text on focus"
        helper_text: "This will disappear when you click off"
        helper_text_mode: "on_focus"
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        text_validate_unfocus: False
        on_text_validate:
            app.game.player_input()

<MenuButton>
    text: "Menu"
    text_color: app.theme_cls.primary_color
    on_release:
        app.game.PopUp.dismiss()
        app.root.ids.nav.screen_manager.current = "Menu"
        app.set_game("Maths Dojo")

<PlayAgainButton>
    text: "Play Again"
    text_color: app.theme_cls.primary_color
    on_release:
        app.game.PopUp.dismiss()
        app.game.play_game()

<HelpButton>
    text: "Help"
    text_color: app.theme_cls.primary_color
    on_release:
        app.game.PopUp.dismiss()
        app.game.display_help()

<CloseButton>
    text: "Close"
    text_color: app.theme_cls.primary_color
    on_release:
        app.game.HelpPopUp.dismiss()
        app.game.PopUp.open()

<StartGameButton>
    text: "Start Game"
    text_color: app.theme_cls.primary_color
    on_release:
        app.game.PopUp.dismiss()
        app.game.play_game()